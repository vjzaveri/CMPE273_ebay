<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
	<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js"></script>
	<script	src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
	<script src="http://code.jquery.com/ui/1.9.2/jquery-ui.js"></script>
	<script	src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular-route.min.js"></script>
<!-- Loading the AngularJS file from /public/angularJS folder -->
	<script src="angularjs/mainController.js"></script>
  </head>
  <body ng-app="mainApp" ng-controller="mainPageController">

  <div class="container">
  <div class="row">
    <div class="col-md-1">
      <img src="./stylesheets/ebayLogo.png" style="width: 122px; height: 50px">
    </div>
    <div class="col-md-1" style="padding-left: 35px;" ng-hide="loggedIn">
      <button class="btn btn-lg btn-link" ng-click="signIn();">Sign In</button>
    </div>
    <div class="col-md-1" ng-hide="loggedIn">
      <button class="btn btn-lg btn-link" ng-click="signUp();">Register</button>
    </div>
    <div class="col-md-1" style="padding-left: 35px;" ng-show="loggedIn">
      <button class="btn btn-lg btn-link" ng-click="viewHomepage();">HomePage</button>
    </div>
    <div class="col-md-7"></div>
    <div class="col-md-3"> 
      <span class="pull-right">
      <div ng-show="loggedIn" class="dropdown">
      <button href="#" class="dropdown-toggle btn btn-lg btn-link pull-right" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">My eBay <span class="caret"></span></button>
      <ul class="dropdown-menu">
        <li><button class="btn btn-lg btn-link" ng-click="viewProfile();">View Profile</button></li>
        <li><button class="btn btn-lg btn-link" ng-click="sellItemFile();">Sell Item</button></li>
        <li><button class="btn btn-lg btn-link" ng-click="logout();">Logout</button></li>
      </ul>
      </div>
      </span>
    </div>
  </div>
  <div class="row" ng-show="loggedIn">
    <div class="pull-right"><h6 style="font-weight: bold;">Last Logged in @ {{lliTime}}</h6></div>
  </div>
  <div class="col-md-12">
    <!--<ng-view></ng-view>-->
  	<div ng-view></div>
  </div>
  </div>

  </body>
</html>